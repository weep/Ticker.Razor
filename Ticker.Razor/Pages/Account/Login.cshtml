@page
@model Ticker.Razor.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
<h3>@HttpContext.User.Identity.IsAuthenticated</h3>
<div class="row">
    <div class="col-md-3">
        <form method="post">
            <h2>Use a local account to log in.</h2>
            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Identifier"></label>
                <input asp-for="Input.Identifier" class="form-control">
                <span asp-validation-for="Input.Identifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Seed"></label>
                <input asp-for="Input.Seed" class="form-control">
                <span asp-validation-for="Input.Seed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default" asp-page-handler="Login">Log in</button>
                <button type="submit" class="btn btn-default" asp-page-handler="Register" formnovalidate="formnovalidate">Register</button>
                <button type="submit" class="btn btn-default" asp-page-handler="Logout" formnovalidate="formnovalidate">Logout</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
